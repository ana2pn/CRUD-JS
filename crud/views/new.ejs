                        <option <% if(doc.uf === "RJ") {%><%= s %> <% } %>>RJ</option>
                        <option <% if(doc.uf === "ES") {%><%= s %> <% } %>>ES</option>
                        <option <% if(doc.uf === "AM") {%><%= s %> <% } %>>AM</option>
                    </select>
                <label>
            </p>
            <p>
                <a href="/" >Cancelar</a> |
                <input type="submit" value="Salvar"/>
            </p>
        </form>
    </body>
</html>
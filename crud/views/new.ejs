                        <option <% if(doc.uf === "DF") {%><%= s %> <% } %>>DF</option>
                        <option <% if(doc.uf === "PB") {%><%= s %> <% } %>>PB</option>
                        <option <% if(doc.uf === "AL") {%><%= s %> <% } %>>AL</option>
                        <option <% if(doc.uf === "AC") {%><%= s %> <% } %>>AC</option>
                        <option <% if(doc.uf === "TO") {%><%= s %> <% } %>>TO</option>
                        <option <% if(doc.uf === "PI") {%><%= s %> <% } %>>PI</option>
                        <option <% if(doc.uf === "MA") {%><%= s %> <% } %>>MA</option>
                        <option <% if(doc.uf === "SE") {%><%= s %> <% } %>>SE</option>
                        <option <% if(doc.uf === "RR") {%><%= s %> <% } %>>RR</option>
